# PostgreSQL Database Configuration (for local development)
# These are used by docker-compose.dev.yml
# Default values are provided, but you can override them here

POSTGRES_USER=signify
POSTGRES_PASSWORD=signify_dev_password
POSTGRES_DB=signify_dev

# Database Connection URL
# For local development, this will be auto-constructed from the above values
# You can override it if you need a custom connection string
DATABASE_URL=postgresql://signify:signify_dev_password@postgres:5432/signify_dev

# Backend Configuration
PORT=3001
HOSTNAME=0.0.0.0
NODE_ENV=development

# Test Database Configuration
# Separate database for running tests (isolated from development data)
POSTGRES_TEST_DB=signify_test
TEST_DATABASE_URL=postgresql://signify:signify_dev_password@postgres-test:5432/signify_test

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters
BETTER_AUTH_URL=http://localhost:3000

# Better Auth Configuration (Backend)
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters-generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
